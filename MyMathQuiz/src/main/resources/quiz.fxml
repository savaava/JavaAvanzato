<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppoG1.QuizController">
    <children>
        <VBox alignment="CENTER" layoutX="250.0" layoutY="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="questionLabel" text="Quesito">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="answerField" alignment="CENTER" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets left="200.0" right="200.0" />
                    </VBox.margin>
                </TextField>
                <Label fx:id="countLabel" text="Conteggio">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Button fx:id="confirmBtn" mnemonicParsing="false" onAction="#onConfirm" text="Conferma" />
                <Label fx:id="timeLabel" text="Tempo" textFill="RED">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
